{
  "name": "taggy",
  "displayName": "Taggy",
  "description": "Taggy is a VSCode extension that lets you assign and display custom tags on files. Tags are shown as badges on file icons, making it easier to categorize and organize your project. ðŸ“–",
  "version": "2.2.1",
  "publisher": "Muuuub",
  "icon": "images/logo.jpg",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "taggy.addTag",
        "title": "Taggy: Add Tag to File"
      },
      {
        "command": "taggy.removeTag",
        "title": "Taggy: Remove Tag from File"
      },
      {
        "command": "taggySidebar.filter",
        "title": "Search Tagged Files"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "taggy.addTag",
          "group": "navigation"
        },
        {
          "command": "taggy.removeTag",
          "group": "navigation"
        }
      ],
      "view/title": [
        {
          "command": "taggySidebar.filter",
          "group": "navigation",
          "when": "view == taggySidebar"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "taggy",
          "title": "Taggy",
          "icon": "images/taggy-icon.svg"
        }
      ]
    },
    "views": {
      "taggy": [
        {
          "id": "taggySidebar",
          "name": "Tagged Files",
          "canSelectMany": false
        }
      ]
    }
  },
  "keywords": [
    "tags",
    "organize",
    "files",
    "visual",
    "file badges",
    "productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Mub1522/Taggy.git"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.19",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "typescript": "^5.7.3"
  }
}